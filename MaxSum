public int FindGreatestSumOfSubArray(int[] array) { if(array.length==0) return 0; int maxSum = array[0]; 
int arr = array[0]; 
for (int i = 1; i < array.length; i++) {
        if (arr < 0) {  
            arr = array[i];  
        } else {                              
           arr += array[i];  
        }                                                    
        maxSum = maxSum>arr?maxSum:arr;  
    }  
    return maxSum;  
}
